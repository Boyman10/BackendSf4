{% extends 'base.html.twig' %}
{% block title %}Profile me{% endblock %}
 {%  block stylesheets %}
     {{ parent() }}
 {% endblock %}
{% block body %}



    <div class="container">

        {{ include('partials/menu.html.twig')}}

        <h1>Here upload a profile picture</h1>

        <p>Authorized access only</p>

        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <p>Username: {{ app.user.username }}<br/>
            Email : {{ app.user.email }}<br/>
                Role : {{ app.user.role.roleName }}
            </p>
        {% endif %}


        <p>More details about uploading data : <a href="https://symfony.com/doc/current/controller/upload_file.html" target="_blank">Symfony</a></p>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}